<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="travel"
            type="com.mupper.gobus.viewmodel.TravelViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/main_nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/main_nav_graph" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnToggleTravel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@{ travel.fabColor }"
            android:onClick="@{() -> travel.toggleTravelState()}"
            android:src="@{travel.fabIcon}"
            android:tint="@{ travel.fabIconColor}"
            app:layout_constraintBottom_toBottomOf="@id/main_nav_host_fragment"
            app:layout_constraintEnd_toEndOf="@id/main_nav_host_fragment" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>