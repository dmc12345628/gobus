<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bus"
            type="com.mupper.gobus.viewmodel.BusViewModel" />
    </data>

    <com.stepstone.stepper.StepperLayout
        android:id="@+id/stepperLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:ms_activeStepColor="@color/primaryDarkColor"
        app:ms_backButtonBackground="@color/primaryColor"
        app:ms_backButtonColor="@color/primaryTextColor"
        app:ms_bottomNavigationBackground="@color/primaryColor"
        app:ms_completeButtonBackground="@color/primaryColor"
        app:ms_completeButtonColor="@color/primaryTextColor"
        app:ms_errorColor="@color/onError"
        app:ms_inactiveStepColor="@color/secondaryDarkColor"
        app:ms_stepperType="tabs"
        app:ms_nextButtonBackground="@color/primaryColor"
        app:ms_nextButtonColor="@color/primaryTextColor"
        app:ms_tabNavigationEnabled="true" />
</layout>